<% if not user_signed_in? %>
  <p>Please <%= link_to 'login', new_user_session_path %></p>
<% else %>
  <%= bootstrap_form_for(@barbecue) do |f| %>
    <% if @barbecue.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@barbecue.errors.count, "error") %> prohibited this barbecue from being saved:</h2>

        <ul>
          <% @barbecue.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.text_field :title, hide_label: true, placeholder: "Titre" %>
    <h3>Barbecue details</h3>

    <p>
      <h4>Organised by:</h4>  <%= current_user.name %>
    </p>
    <p>
      <h4>Begin date :</h4>
      <%= f.date_select :begin_date, hide_label: true %>
    </p>

    <h4>Ingredients</h4>
    <%= f.fields_for :barbecue_ingredient do |barbecue_ingredient| %>
      <div class="form-inline">
        <%= barbecue_ingredient.number_field :quantity, hide_label: :true, placeholder: "Quantity" %>
        <%= barbecue_ingredient.collection_select :ingredient_id, Ingredient.all, :id, :title, hide_label: :true, prompt: "Select ingredient" %>
        <%= barbecue_ingredient.check_box :_destroy %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit :class => 'btn btn-primary btn-lg'  %>
    </div>
  <% end %>
  <h3>We already have</h3>
  <ul>
    <% @barbecue.supply.each() do |supply| %>
      <li><%= supply.quantity %> <%= supply.ingredient.title %></li>
    <% end %>
  </ul>
  <h3>Who comes ?</h3>
  <% if @attending_users %>
    <ul>
      <% @attending_users.each() do |user| %>
        <li><%= user.name %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
