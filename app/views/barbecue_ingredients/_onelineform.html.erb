<%= bootstrap_form_for([@barbecue, barbecue_ingredient], remote: true, class: "form-inline") do |f| %>
    <%= f.number_field :quantity, hide_label: :true, placeholder: "quantity" %>
  <input class="form-control typeahead" name="barbecue_ingredient[ingredient[title]]" placeholder="Type an ingredient" required="required"/>
  <%= f.submit :class => 'btn btn-success btn-lg'  %>
<% end %>
