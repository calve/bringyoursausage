<h1>Listing supplies</h1>

<table>
  <thead>
    <tr>
      <th>Who</th>
      <th colspan="2">What</th>
      <th>Where</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @supplies.each do |supply| %>
      <tr>
        <td><%= supply.user.name %></td>
        <td><%= supply.quantity %></td>
        <td><%= supply.ingredient.title %></td>
        <td><%= supply.barbecue.title %></td>
        <td><%= link_to 'Show', supply %></td>
        <td><%= link_to 'Edit', edit_supply_path(supply) %></td>
        <td><%= link_to 'Destroy', supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Supply', new_supply_path %>
